<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <title>布壳儿网</title>
    <link rel="stylesheet" type="text/css" href="/static/security/layui/css/layui.css" />
    <link rel="stylesheet" type="text/css" href="/static/security/css/admin.css" />
    <link rel="stylesheet" type="text/css" href="/static/security/select2/select2.min.css" />
    <style>
        /*排除掉layui自带的下拉框*/
        #searchForm .layui-unselect{display: none ;-webkit-user-select:none;-ms-user-select:none;-moz-user-select:none}
    </style>
</head>
<body>
<!--主体-->
<div class="wrap-container">
    <div class="column-content-detail">
        <!--查询表单-->
        <form id="searchForm" class="layui-form" action="">
            <div class="layui-form-item">
                <div class="layui-inline tool-btn">
                    <button class="layui-btn layui-btn-small layui-btn-normal addBtn" data-url="/security/${table.entityNameFirstLowerCase}/${table.entityNameFirstLowerCase}Add"><i class="layui-icon">&#xe654;</i></button>
                    <button class="layui-btn layui-btn-small layui-btn-danger delBtn"  data-url="/security/${table.entityNameFirstLowerCase}/${table.entityNameFirstLowerCase}Add"><i class="layui-icon">&#xe640;</i></button>
                </div>
                <div class="layui-inline">
                    <select name="name" style="width: 200px;height: 10px" id="name">
                        <option value="">请输入名称</option>
                        <option value="0">张三1</option>
                        <option value="0">张三2</option>
                        <option value="0">张三3</option>
                        <option value="0">张三4</option>
                    </select>
                </div>
                <div class="layui-inline">
                    <select name="states" style="width: 200px;height: 10px" id="states" multiple="multiple">
                        <option value="">请选择状态</option>
                        <option value="0">显示</option>
                        <option value="1">隐藏</option>
                    </select>
                </div>
                <div style="margin-top: -5px;" class="layui-btn layui-btn-normal"  id="search">搜索</div>
            </div>
        </form>
        <!--查询列表-->
        <div class="layui-form" id="table-list"> </div>
    </div>
    <!--遮罩-->
    <div id="shadow">
        <img class="buukle-shadow" src="/static/security/images/page/loading.png">
    </div>
</div>
<!--脚本-->
<script src="/static/security/layui/layui.js" type="text/javascript" charset="utf-8"></script>
<script src="/static/security/js/common.js" type="text/javascript" charset="utf-8"></script>
<script src="/static/security/select2/jquery.min.js" type="text/javascript" charset="utf-8"></script>
<script src="/static/security/select2/select2.full.js"type="text/javascript" charset="utf-8"></script>
<script src="/static/security/js/commonHome.js" type="text/javascript" charset="utf-8"></script>
<script>
    layui.use(['jquery'], function() {
        document.getElementById("shadow").style.display ="block";
        $ = layui.jquery;
        $('#table-list').load("/${table.entityNameFirstLowerCase}/getPageList",function () {
            initCommonPage();
            document.getElementById("shadow").style.display ="none";
        });
    });
</script>
</body>
</html>